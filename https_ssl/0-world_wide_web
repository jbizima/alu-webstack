#!/usr/bin/env bash
# bash script to display and extract for a subdomain and domain
# acquire record type and ip address of subdomains
splitter () {
    TEMP=$(dig "$SUBD" | grep -A1 'ANSWER SECTION:' | tail -1)
    RE=$(echo "$TEMP" | awk '{ print $4 }')
    IP=$(echo "$TEMP" | awk '{ print $5 }')
}

if [ "$#" -eq 2 ]
then
    SUBD="$2.$1"
    splitter "$SUBD"
    ecgho "The subdomain $2 is a $RE record and points to $IP"
elif [ "$#" -eq 1 ]
then
    ARR=('www' 'lb-01' 'web-01' 'web-02')
    for i in "${ARR[@]}"
    do
        SUBD="$i.$1"
        splitter "$SUBD"
        echo "The subdomain $i is a $RE record and points to $IP"
    done
fi
